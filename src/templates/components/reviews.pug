script(type="text/x-template")#carousel-template
  carousel(:navigationEnabled="true" :paginationEnabled="false").reviews-carousel__list
    slide(v-for="review in reviews" :key="review.id").reviews-carousel__item
      vc-quote(:review="review")

script(type="text/x-template")#slide-template
  .quote
    .quote__text
      p {{ review.text }}
    .quote__user
      .user
        .user__avatar
          img(:src="review.photo", :alt="review.author").user__avatar-pic
        .user__info
          .user__name {{ review.author }}
          .user__position {{ review.occ }}