.gamburger-menu-link {
	vertical-align: middle;
	position: relative;
	height: 20px;
	align-items: center;
	display: none;

	@include tablets {
		display: inline-flex;
	}
}

.gamburger-menu-link__bars {
	&, &:before, &:after {
		background-color: #464d62;
		width: 24px;
		height: 5px;
		border-radius: 3px;
	}

	&:before, &:after {
		content: "";
		display: block;
		position: absolute;
	}

	&:before {
		top: 0;
	}

	&:after {
		bottom: 0;
	}
}